{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "./assets/oomc_fun_bp/scripts/",
    "strict": true,
    "moduleResolution": "node",
    "types": ["mocha", "chai", "node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf"
  },
  "include": ["src/**/*"]
}
